<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".30"
                android:gravity="center"
                android:orientation="vertical">

                <com.weship.mover.Fontclasses.Weshiptextviewbold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_booking"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.weship.mover.Fontclasses.Weshiptextviewregular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_this_is_correct"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_style"
                        android:text="@string/yes" />

                    <Button
                        android:id="@+id/btn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_style_white"
                        android:text="@string/no" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".70"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <com.weship.mover.Fontclasses.Weshiptextviewbold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/company"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.weship.mover.Fontclasses.Weshiptextviewregular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".70"
                        android:singleLine="true"
                        android:text="Road Runner Moving and  Storage"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <com.weship.mover.Fontclasses.Weshiptextviewbold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/bid"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.weship.mover.Fontclasses.Weshiptextviewregular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".70"
                        android:singleLine="true"
                        android:text="Road Runner Moving and  Storage"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.weship.mover.Fontclasses.Weshiptextviewbold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.weship.mover.Fontclasses.Weshiptextviewregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="Road Runner Moving ''s'gsgl;sdg;s;gs;,lg;,s;g;s,g;sgsmgaand  Storage"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/ten_dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_gree" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="@color/black" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_red" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/source"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/unfiled_soruce"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:weightSum="1">

                            <com.weship.mover.Fontclasses.Weshipedittextregular
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:singleLine="true"
                                android:text="325 Shubhash  Nabger Bani Park Jaipur"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/ic_navigator_gray" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/destination"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/source"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/unfiled_soruce"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:weightSum="1">

                            <com.weship.mover.Fontclasses.Weshipedittextregular
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:singleLine="true"
                                android:text="325 Shubhash  Nabger Bani Park Jaipur"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:background="@color/gray"
                                android:padding="10dp"
                                android:src="@drawable/ic_arrow_forward_white" />
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>