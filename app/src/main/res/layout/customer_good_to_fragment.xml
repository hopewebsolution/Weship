<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.weship.mover.Fontclasses.Weshiptextviewbold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/you_are_good_to_go"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <com.weship.mover.Fontclasses.Weshiptextviewregular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/thanks_for_using_weship"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_black"
                        android:padding="20dp"
                        android:src="@drawable/ic_icon" />

                    <com.weship.mover.Fontclasses.Weshiptextviewbold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/ten_dp"
                        android:text="@string/shiping_detail"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.weship.mover.Fontclasses.Weshiptextviewregular
                        android:id="@+id/detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:text="@string/transporting_a_2013_toyoto_carolla_vin_12345678_on_july16_2018"
                        android:textSize="18sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/ten_dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_gree" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="70dp"
                            android:background="@color/black" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_red" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/source"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/fiiled_soruce"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp">

                            <com.weship.mover.Fontclasses.Weshiptextviewregular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="325 Shubhash  Nabger Bani Park Jaipur"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/destination"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/source"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/fiiled_soruce"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp">

                            <com.weship.mover.Fontclasses.Weshiptextviewregular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="325 Shubhash  Nabger Bani Park Jaipur"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_tack_back"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_style_back_tack"
                        android:text="@string/tack_me_back"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>